{
  "name": "template-next-web-app",
  "version": "0.0.0",
  "description": "A template for creating new web apps using Next.js with TypeScript.",
  "scripts": {
    "dev": "next dev",
    "lint": "next lint",
    "format": "prettier --write **/*.tsx",
    "build": "next build",
    "start": "next start",
    "test": "jest --coverage",
    "test:reset": "jest --updateSnapshot",
    "test:ci": "jest --ci",
    "nyc:coverage": "nyc report --reporter=text-summary --check-coverage",
    "nyc:instrument": "nyc instrument --compact=false src instrumented",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "cypress:headless:edge": "cypress run --browser edge",
    "cypress:headless:chrome": "cypress run --browser chrome",
    "cypress:headless:firefox": "cypress run --browser firefox",
    "e2e": "start-server-and-test start http://localhost:3000 cypress",
    "e2e:headless": "start-server-and-test start http://localhost:3000 cypress:headless",
    "e2e:headless:edge": "start-server-and-test start http://localhost:3000 cypress:headless:edge",
    "e2e:headless:chrome": "start-server-and-test start http://localhost:3000 cypress:headless:chrome",
    "e2e:headless:firefox": "start-server-and-test start http://localhost:3000 cypress:headless:firefox",
    "cdk": "cdk",
    "cdk:build": "tsc --project tsconfigcdk.json",
    "all": "npm run format && npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "next": "12.1.0",
    "next-auth": "4.2.1",
    "next-themes": "0.1.1",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@cypress/code-coverage": "3.9.12",
    "@tailwindcss/typography": "0.5.2",
    "@testing-library/jest-dom": "5.16.2",
    "@testing-library/react": "12.1.4",
    "@types/node": "17.0.21",
    "@types/react": "17.0.40",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.15.0",
    "@aws-cdk/aws-amplify-alpha": "2.10.0-alpha.0",
    "aws-cdk": "2.16.0",
    "cdk-nag": "2.10.4",
    "aws-cdk-lib": "2.16.0",
    "constructs": "10.0.88",
    "babel-plugin-istanbul": "6.1.1",
    "check-code-coverage": "1.10.0",
    "cypress": "9.5.2",
    "eslint": "8.11.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-testing-library": "5.1.0",
    "jest": "27.5.1",
    "lodash": ">=4.17.21",
    "prettier": "2.5.1",
    "start-server-and-test": "1.14.0",
    "tailwindcss": "3.0.23",
    "typescript": "4.6.2",
    "ts-node": "10.7.0",
    "autoprefixer": "10.4.2",
    "postcss": "8.4.8"
  }
}
